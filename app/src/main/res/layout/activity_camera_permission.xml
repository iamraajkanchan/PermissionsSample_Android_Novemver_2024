<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CameraPermissionActivity">

    <ImageView
        android:id="@+id/imgCameraPreview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/label_camera_preview"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextureView
        android:id="@+id/textureViewCameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btnTakeAPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_take_a_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>